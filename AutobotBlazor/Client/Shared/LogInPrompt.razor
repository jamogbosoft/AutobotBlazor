
<PageTitle>LogIn Prompt</PageTitle>
<div id="root">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image">
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Monitoring Service</h1>
                                </div>
                                <form class="user">
                                    <div class="form-group">
                                        <label for="email" class="active">Email</label>
                                        <input name="email" id="email" type="email" class="validate form-control form-control" value="" required>
                                        <span class="helper-text text-danger small" data-error="wrong"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="password" class="active">Password</label>
                                        <input name="password" id="password" type="password" class="validate form-control form-control" value="" required>
                                        <span class="helper-text text-danger small" data-error="wrong"></span>
                                    </div>
                                    <br>
                                    <div>
                                        <button class="btn btn-primary btn-block">Login</button>
                                    </div>
                                </form>
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="Toastify"></div>
</div>

